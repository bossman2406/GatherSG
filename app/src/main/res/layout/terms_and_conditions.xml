<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSection1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="1. Acceptance of Terms"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By accessing or using GatherSG, you agree to comply with and be bound by these terms and conditions. If you do not agree to these terms, please do not use the service." />

        <TextView
            android:id="@+id/tvSection2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="2. User Eligibility"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You must be at least 13 years old to use GatherSG. By using the service, you represent and warrant that you meet the eligibility requirements." />

        <TextView
            android:id="@+id/tvSection3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="3. User Accounts"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSubSection31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3.1 Account Creation" />

        <TextView
            android:id="@+id/tvContent31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="To access certain features of the service, you may be required to create an account. You agree to provide accurate and complete information during the registration process." />

        <TextView
            android:id="@+id/tvSubSection32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3.2 Account Security" />

        <TextView
            android:id="@+id/tvContent32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You are responsible for maintaining the confidentiality of your account credentials and for all activities that occur under your account." />

        <TextView
            android:id="@+id/tvSection4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="4. User Content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSubSection41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4.1 Ownership" />

        <TextView
            android:id="@+id/tvContent41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Any content you submit, upload, or generate using GatherSG remains your intellectual property." />

        <TextView
            android:id="@+id/tvSubSection42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4.2 License" />

        <TextView
            android:id="@+id/tvContent42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="By submitting content, you grant GatherSG Pte Ltd a worldwide, non-exclusive, royalty-free license to use, reproduce, modify, adapt, publish, translate, distribute, and display the content." />
        <TextView
            android:id="@+id/tvSection5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="5. Additional Terms"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Additional terms may apply to certain services or features. In the event of a conflict, these terms and conditions shall prevail." />

        <TextView
            android:id="@+id/tvSection6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="6. User Conduct"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You agree to abide by all applicable local, state, national, and international laws and regulations." />

        <TextView
            android:id="@+id/tvSection7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="7. Termination"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="GatherSG reserves the right to terminate or suspend your account and access to the service for any reason without prior notice." />

        <TextView
            android:id="@+id/tvSection8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="8. Governing Law"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="These terms and conditions are governed by the laws of Singapore. You agree to submit to the exclusive jurisdiction of the courts located in Singapore for any disputes arising out of or relating to the use of GatherSG." />

        <TextView
            android:id="@+id/tvSection9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="9. Changes to Terms"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="GatherSG reserves the right to update or modify these terms and conditions at any time without prior notice. It is your responsibility to review these terms periodically." />

        <TextView
            android:id="@+id/tvSection10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="10. Contact Information"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="For any questions about these terms and conditions, please contact us at GatherSG@gmail.com." />

        <TextView
            android:id="@+id/tvSection11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="11. Severability"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="If any provision of these terms and conditions is found to be unenforceable or invalid, that provision will be limited or eliminated to the minimum extent necessary, and the remaining provisions will remain in full force and effect." />

        <TextView
            android:id="@+id/tvSection12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="12. Entire Agreement"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="These terms and conditions constitute the entire agreement between you and GatherSG Pte Ltd and supersede all prior and contemporaneous agreements, representations, and understandings." />

        <TextView
            android:id="@+id/tvSection13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="13. Effective Date"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="These terms and conditions are effective as of the date of your acceptance, as indicated by your use of GatherSG." />
        <TextView
            android:id="@+id/tvSection14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="14. Legal Disclaimer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvContent14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="These terms and conditions constitute a legally binding agreement between you and GatherSG Pte Ltd." />

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Last Update: 5 April 2024"
            android:textSize="16sp"
            android:textStyle="italic" />


    </LinearLayout>
</ScrollView>