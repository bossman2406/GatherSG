<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Name and Logo -->
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:src="@drawable/gathersglogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GatherSG"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- App Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Uniting Heart, Empowering Hands"
                android:textAlignment="center"
                android:textSize="20sp" />

            <!-- Version Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Release Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release Notes:\n- Bug fixes and performance improvements."
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- Contact Information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact us at: support@gathersg.com"
                android:autoLink="email"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- Privacy Policy -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:autoLink="web"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- Terms of Service -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:autoLink="web"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- Development Team -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed by GatherSG Pte Ltd"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Legal Information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2024 GatherSG Pte Ltd. All rights reserved."
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
