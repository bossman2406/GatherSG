<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".scanner.attendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_black"
            android:text="Event Attendance"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:textStyle="bold" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/orange"
            app:strokeWidth="3dp"
            android:layout_marginLeft="20dp"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Select Event"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    />
                <Spinner
                    android:id="@+id/autoCompleteEvent"
                    style="@android:style/Widget.Material.DropDownItem"
                    android:layout_width="350dp"
                    android:layout_height="40dp"

                    android:textSize = "30dp"
                    android:backgroundTint="@color/white"
                    android:spinnerMode="dropdown"

                    />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>









        <Button
            android:id="@+id/eventScanButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/orange"
            android:text="Scan Event Code"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:elevation="10dp" />

    </LinearLayout>

</FrameLayout>